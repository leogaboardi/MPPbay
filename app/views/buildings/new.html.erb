<div class="row">
  <div class="col-md-12">

    <%= form_tag "/buildings", :class => "form-horizontal", :method => "post" do %>

      <!-- Label and input for label -->
      <div class="form-group">
        <label for="label" class="col-sm-3 control-label">
          Label
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'label', nil, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for address_line_1 -->
      <div class="form-group">
        <label for="address_line_1" class="col-sm-3 control-label">
          Address
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'address_line_1', nil, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="col-sm-3 control-label">
          City
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'city', nil, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for state -->
      <div class="form-group">
        <label for="state" class="col-sm-3 control-label">
          State
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'state', nil, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for zip -->
      <div class="form-group">
        <label for="zip" class="col-sm-3 control-label">
          Zip
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'zip', nil, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for country -->
      <div class="form-group">
        <label for="country" class="col-sm-3 control-label">
        Country
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'country', nil, class: 'form-control' %>
        </div>
      </div>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <%= submit_tag "Create new building", :class => "btn btn-primary" %>
        </div>
      </div>

    <% end %>
    <div class="col-md-12">
      <%= link_to "Go back", buildings_path %>
      <br>
    </div>
  </div>
</div>
