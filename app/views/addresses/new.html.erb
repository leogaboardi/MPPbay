<!-- Validation failure messages -->
  <% if @address.errors.any? %>
    <% @address.errors.full_messages.each do |message| %>
      <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= message %>
      </div>
    <% end %>
  <% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_tag "/addresses", :class => "form-horizontal", :method => "post" do %>
      <!-- Label and input for full_name -->
      <div class="form-group">
        <label for="full_name" class="col-sm-3 control-label">
          full_name
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'full_name', nil, class: 'form-control' %>
        </div>
      </div>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <%= submit_tag "Create new address", :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-12">
      <%= link_to "Go back", addresses_path %>
      <br>
    </div>
  </div>
</div>
