<div class="row">
  <div class="col-md-12">
    <%= form_tag address_path(@address), :class => "form-horizontal", :method => "put" do %>
      <!-- Label and input for full_name -->
      <div class="form-group">
        <label for="full_name" class="col-sm-3 control-label">
          Name
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'full_name', @address.full_name, class: 'form-control' %>
        </div>
      </div>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <%= submit_tag "Update address", :class => "btn btn-primary" %>
        </div>
      </div>

    <div class="col-md-12">
      <a href="/addresses">Go back</a>
      <br>
    </div>


    <% end %>
  </div>
</div>



