<div class="row">
  <div class="col-md-12">
    <h3>Manage statuses</h3>

    <%= link_to "Add new status", new_status_path, :class => "btn btn-primary" %>
    <p>&nbsp</p>
    <table class="table table-striped">
      <tr>
        <th>Label</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @statuses.each do |status| %>
      <tr>
        <td><%= status.label %></td>
        <td>
         <%= link_to "View", status_path(status.id) %>
        </td>
        <td>
          <%= link_to "Edit", edit_status_path(status.id) %>
        </td>

        <td>
          <%= link_to "Delete", status_path(status.id), :method => "delete", data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
