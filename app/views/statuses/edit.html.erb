<div class="row">
  <div class="col-md-12">
    <%= form_tag status_path(@status), :class => "form-horizontal", :method => "put" do %>
      <!-- Label and input for status -->
      <div class="form-group">
        <label for="label" class="col-sm-3 control-label">
          Label
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'label', @status.label, class: 'form-control' %>
        </div>
      </div>

      <!-- UPDATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <%= submit_tag "Update status", :class => "btn btn-primary" %>
        </div>
      </div>

    <div class="col-md-12">
      <%= link_to "Go back", statuses_path %>
      <br>
    </div>


    <% end %>
  </div>
</div>



