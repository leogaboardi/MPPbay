<div class="row">
  <div class="col-md-12">
    <%= form_tag cart_path(@cart), :class => "form-horizontal", :method => "put" do %>
      <!-- Label and input for buyer_id -->
      <div class="form-group">
        <label for="buyer_id" class="col-sm-3 control-label">
          Buyer id
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'buyer_id', @cart.buyer_id, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for cart_id -->
      <div class="form-group">
        <label for="item_id" class="col-sm-3 control-label">
          Name
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'item_id', @cart.item_id, class: 'form-control' %>
        </div>
      </div>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <%= submit_tag "Update cart", :class => "btn btn-primary" %>
        </div>
      </div>

    <div class="col-md-12">
      <%= link_to "Go back", carts_path %>
    </div>
    <% end %>
  </div>
</div>



