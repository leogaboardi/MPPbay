<div class="row">
  <div class="col-md-12">
    <%= form_tag user_path(@user), :class => "form-horizontal", :method => "put" do %>
      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-3 control-label">
          Name
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'name', @user.name, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="col-sm-3 control-label">
          Email
        </label>
        <div class="col-sm-4">
          <%= email_field_tag 'email', @user.email, class: 'form-control' %>
        </div>
      </div>

      <!-- Label and input for phone number -->
      <div class="form-group">
        <label for="phone" class="col-sm-3 control-label">
          Phone number
        </label>
        <div class="col-sm-4">
          <%= phone_field_tag 'phone', @user.phone, class: 'form-control' %>
        </div>
      </div>

      <% if current_user.admin? %>
        <!-- Admin checkbox -->
        <div class="form-group">
          <div class="col-sm-9 col-sm-offset-3">
            <div class="checkbox">
              <label>
                <%= check_box_tag 'admin', true, @user.admin %>
                Admin rights?
              </label>
              <p><em>Note: this field is only visible to you because you have admin rights</em></p>
            </div>
          </div>
        </div>
      <% end %>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <%= submit_tag "Update user", :class => "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-12">
      <%= link_to "Go back", :back %>
    </div>
  </div>
</div>



