<div class="row">
  <div class="col-md-12">
    <h3>Make offer to <%= @seller %></h3>

    <p>Message to the seller</p>

    <%= form_tag "/batman", :class => "form-horizontal", :method => "get" do %>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" aria-required="true" class="col-sm-3 control-label">
          Your email
        </label>
        <div class="col-sm-8">
          <%= text_area_tag 'description', "Hello,", maxlength: 1000, class: 'form-control item-description', rows:"10" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-3">
          <div class="checkbox">
            <label>
              <%= check_box_tag 'accept' %>
              <p>Yep, I'm sure I want to send this email.</p>
            </label>
          </div>
        </div>
      </div>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <%= submit_tag "Make offer", :class => "btn btn-primary", data: {confirm: "Are you sure?"} %>
        </div>
      </div>

    <% end %>
    <div class="col-md-12">
      <%= link_to "Go back", offers_path %>
    </div>
  </div>
</div>
