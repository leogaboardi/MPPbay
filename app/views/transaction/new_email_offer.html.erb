<div class="row">
  <div class="col-md-12">
    <h3>Make an offer to <%= @seller.name %></h3>
    <p>Below this line you can see the email to be sent to <%= @seller.name %> making an offer to buy his/her stuff. You can also add additional comments below.</p>
    <hr class="email">
    <div class="row"></div>
      <div class="col-md-8 col-md-offset-2">
        <%= render :file => "/app/views/transaction_mailer/offer_email" %>
      </div>
    </div>

    <p>&nbsp;</p>
    <hr class="email">
    <%= form_tag send_email_offer_path(current_user.id,@seller.id), :class => "form-horizontal", :method => "get" do %>

      <!-- Label and input for comment -->
      <div class="form-group">
        <div class="col-sm-8 col-md-offset-2">
          <%= text_area_tag 'comment', nil, maxlength: 1000, class: 'form-control', rows:"5", :placeholder => "Put some additional comments here if you want to" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="checkbox">
            <label>
              <%= check_box_tag 'accept', 'accepted', false, options = {:required => true} %>
              <p>I understand that I am making a serious offer, and that MPPbay has nothing to do if there any screw up from this!</p>
            </label>
          </div>
        </div>
      </div>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= submit_tag "Make offer", :class => "btn btn-primary" %>
        </div>
      </div>

    <% end %>
    <div class="col-md-12">
      <%= link_to "Go back", my_cart_path, data: {confirm: "Are you sure? If you press OK, you will lose any changes you might have made on the email."}  %>
    </div>
  </div>
</div>
