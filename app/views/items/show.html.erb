<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3><%= @item.title %> data</h3>
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @item.title %></dd>
      <dt>User</dt>
      <dd><%= @item.user.name %></dd>
      <dt>Status</dt>
      <dd>
      <% if !@item.status.nil? %>
        <%= @item.status.label %> (Status id: <%= @item.status.id %>)
      <% end %>
      </dd>
      <dt>Condition</dt>
      <dd>
      <% if !@item.condition.nil? %>
        <%= @item.condition.label %> (Condition id: <%= @item.condition.id %>)
      <% end %>
      </dd>
      <dt>Details</dt>
      <dd><%= @item.details %></dd>
      <dt>Most recent price</dt>
      <dd>WIP</dd>

      <dt>Description</dt>
      <dd> <%= @item.description %> </dd>
      <dt>Handling time</dt>
      <dd><%= @item.handling_time %></dd>
      <dt>Listing duration</dt>
      <dd><%= @item.listing_duration %></dd>
      <dt>Available at</dt>
      <dd><%= @item.available_at %></dd>
      <dt>Item URL</dt>
      <dd><a href="<%= @item.item_url %>" target="_blank"><%= @item.item_url %></a></dd>
      <dt>Item location</dt>
      <dd><%= @item.address_id %></dd>
      <dt>Category 1</dt>
      <dd><%= @item.category_1_id %></dd>
      <dt>Category 2</dt>
      <dd><%= @item.category_2_id %></dd>
      <dt>Category 3</dt>
      <dd><%= @item.category_3_id %></dd>
    </dl>
    <%= link_to "Go back", items_path %>
  </div>
</div>
