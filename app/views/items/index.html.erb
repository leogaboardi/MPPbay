<div class="row">
  <div class="col-md-12">
    <h3>Manage items</h3>

    <%= link_to "Add new item", new_item_path, :class => "btn btn-primary" %>
    <p>&nbsp</p>
    <table class="table table-striped">
      <tr>
        <th>Title</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td>
         <%= link_to "View", item_path(item.id) %>
        </td>
        <td>
          <%= link_to "Edit", edit_item_path(item.id) %>
        </td>

        <td>
          <%= link_to "Delete", item_path(item.id), :method => "delete", data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
