<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3>Offer #<%= @offer.id %> data</h3>
    <dl class="dl-horizontal">
      <dt>Buyer</dt>
      <dd><%= @offer.buyer.name %> (<%= @offer.buyer.email %>)</dd>
      <dt>Seller</dt>
      <dd><%= @offer.item.user.name %> (<%= @offer.item.user.email %>)</dd>
      <dt>Item</dt>
      <dd><%= @offer.item.title %></dd>
      <dt>Offer date</dt>
      <dd><%= @offer.created_at %></dd>
    </dl>
    <%= link_to "Go back", offers_path %>
  </div>
</div>
