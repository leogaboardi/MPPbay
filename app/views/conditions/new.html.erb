<div class="row">
  <div class="col-md-12">

    <%= form_tag "/conditions", :class => "form-horizontal", :method => "post" do %>

      <!-- Label and input for label -->
      <div class="form-group">
        <label for="label" class="col-sm-3 control-label">
          Label
        </label>
        <div class="col-sm-4">
          <%= text_field_tag 'label', nil, class: 'form-control' %>
        </div>
      </div>

      <!-- CREATE BUTTON -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <%= submit_tag "Create new condition", :class => "btn btn-primary" %>
        </div>
      </div>

    <% end %>
    <div class="col-md-12">
      <%= link_to "Go back", conditions_path %>
      <br>
    </div>
  </div>
</div>
